# =============================================================================
# Production Configuration (Example)
# =============================================================================
# This file is the SOURCE OF TRUTH for environment variables.
# For production: cp .env.example .env and update secrets.

NODE_ENV=production

# ─── Database ────────────────────────────────────────────────────────────────
POSTGRES_USER=catchy_admin
POSTGRES_PASSWORD=C@tchy_Pr0d_2026!xK9m
POSTGRES_DB=catchy_production

# Replica User (Internal)
PGUSER=replicator
PGPASSWORD=replicator_password

# Connection URLs
# Using service names 'db' and 'db-replica' available in docker network
DATABASE_URL="postgresql://catchy_admin:C@tchy_Pr0d_2026!xK9m@db:5432/catchy_production?schema=public"
DATABASE_REPLICA_URL="postgresql://catchy_admin:C@tchy_Pr0d_2026!xK9m@db-replica:5432/catchy_production?schema=public"

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379

# ─── API ─────────────────────────────────────────────────────────────────────
# Internal container port is 3000. Host port managed by deploy.sh or compose
API_PORT=3000
API_KEY=change-me-to-a-secure-key
JWT_SECRET=change-me-to-a-secure-jwt-secret
SECRET_SALT=change-me-to-a-secure-salt
GEMINI_API_KEY=your_gemini_api_key

# ─── Email ───────────────────────────────────────────────────────────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_password

# ─── Worker ──────────────────────────────────────────────────────────────────
WORKER_CONCURRENCY=8

# ─── Browser Service ─────────────────────────────────────────────────────────
BROWSER_SERVICE_HOST=browser-service
BROWSER_SERVICE_PORT=3001
BROWSER_SERVICE_API_KEY=internal-service-key
BROWSER_COUNT=2
BROWSER_HEADLESS=true
BROWSER_TIMEOUT_MS=30000

# ─── Proxy ───────────────────────────────────────────────────────────────────
PROXY_PROVIDER=fake
FAKE_PROXY_COST_PER_MB=0.001
FAKE_PROXY_FAILURE_RATE=0.05